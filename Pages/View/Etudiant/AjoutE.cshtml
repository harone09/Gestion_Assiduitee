@page
@model miniProjet1.Pages.AjoutEModel
@{
}

<div class="row">
    <div class="col-md-4">
        <form method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Etudiant.nom" class="control-label"></label>
                <input asp-for="Etudiant.nom" class="form-control" />
                <span asp-validation-for="Etudiant.nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.prenom" class="control-label"></label>
                <input asp-for="Etudiant.prenom" class="form-control" />
                <span asp-validation-for="Etudiant.prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.dateN" class="control-label"></label>
                <input asp-for="Etudiant.dateN" class="form-control" />
                <span asp-validation-for="Etudiant.dateN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.contactT" class="control-label"></label>
                <input asp-for="Etudiant.contactT" class="form-control" />
                <span asp-validation-for="Etudiant.contactT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.contactM" class="control-label"></label>
                <input asp-for="Etudiant.contactM" class="form-control" />
                <span asp-validation-for="Etudiant.contactM" class="text-danger"></span>
            </div>
            @*
            <div class="form-group">
                <label asp-for="Etudiant.code" class="control-label"></label>
                <input asp-for="Etudiant.code" class="form-control" />
                <span asp-validation-for="Etudiant.code" class="text-danger"></span>
            </div>*@
        
            <div class="form-group">
                <label asp-for="Etudiant.filiereID" class="control-label"></label>
                <select asp-for="Etudiant.filiereID" class = "form-control">
                    @foreach (var item in @Model.FL)
                    {
                        <option value="@item.id_fil">@item.nom</option>
                    }
                </select>
                <span asp-validation-for="Etudiant.filiereID" class="text-danger"></span>
               
            </div>

            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
